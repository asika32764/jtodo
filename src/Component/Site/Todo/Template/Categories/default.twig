{% extends "@Component/todo.twig" %}

{% block body %}
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            ID
        </th>
        <th>
            Title
        </th>
    </tr>
    {% for cat in categories %}
    <tr>
        <td>
            {{ cat.id }}
        </td>
        <td>
            <a href="{{ router.build('SiteTodo/_default_two_segments', {id:5, controller: 'category'}) }}">
                {{ cat.title }}
            </a>
        </td>
    </tr>
    {% endfor %}
</table>

{{ submit|raw  }}

{% endblock %}